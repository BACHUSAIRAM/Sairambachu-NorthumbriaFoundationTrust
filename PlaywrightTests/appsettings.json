{
  "/*": "============================================================================",
  "/* Project": "Northumbria Healthcare NHS Foundation Trust - Test Automation",
  "/* Description": "Consolidated configuration file for all environments",
  "/* Standards": "UK GDS, NHS Digital, WCAG 2.1 AA, ISTQB",
  "/* Author": "SAIRAM BACHU",
  "/* Version": "3.0.0",
  "/**/": "============================================================================",

  "ActiveEnvironment": "local",

  "Environments": {
    "local": {
      "Name": "local",
      "BaseUrl": "https://www.northumbria.nhs.uk/",
      "Browser": "chrome",
      "Headless": false,
      "Timeout": 30000,
      "ImplicitWait": 10000,
      "MultibrowserEnabled": false,
      "Browsers": [
        "chrome",
        "firefox",
        "msedge"
      ]
    },
    "dev": {
      "Name": "dev",
      "BaseUrl": "https://dev.northumbria.nhs.uk/",
      "Browser": "chrome",
      "Headless": true,
      "Timeout": 30000,
      "ImplicitWait": 10000,
      "MultibrowserEnabled": true,
      "Browsers": [
        "chrome",
        "firefox",
        "msedge"
      ]
    },
    "staging": {
      "Name": "staging",
      "BaseUrl": "https://staging.northumbria.nhs.uk/",
      "Browser": "chrome",
      "Headless": true,
      "Timeout": 30000,
      "ImplicitWait": 10000,
      "MultibrowserEnabled": true,
      "Browsers": [
        "chrome",
        "firefox",
        "msedge"
      ]
    },
    "prod": {
      "Name": "prod",
      "BaseUrl": "https://www.northumbria.nhs.uk/",
      "Browser": "chrome",
      "Headless": true,
      "Timeout": 30000,
      "ImplicitWait": 10000,
      "MultibrowserEnabled": true,
      "Browsers": [
        "chrome",
        "firefox",
        "msedge"
      ]
    }
  },

  "TestEnvironment": {
    "Name": "local",
    "BaseUrl": "https://www.northumbria.nhs.uk/",
    "Browser": "chrome",
    "Headless": false,
    "Timeout": 30000,
    "ImplicitWait": 10000,
    "MultibrowserEnabled": false,
    "Browsers": [
      "chrome",
      "firefox",
      "msedge"
    ]
  },

  "Playwright": {
    "SlowMo": 0,
    "DevTools": false,
    "ViewportWidth": 1920,
    "ViewportHeight": 1080,
    "UseFullWindow": false,
    "TracesDir": "traces",
    "VideosDir": "videos",
    "ScreenshotsDir": "screenshots"
  },

  "TestData": {
    "SearchTerms": [
      "covid",
      "appointments",
      "emergency",
      "health",
      "vaccination"
    ],
    "InvalidSearchTerms": [
      "",
      "northumbria-no-results-check",
      "xyzabc123nonexistent"
    ]
  },

  "Reporting": {
    "ScreenshotOnFailure": true,
    "ScreenshotOnSuccess": false,
    "AttachArtifactsOnSuccess": false,
    "AttachThumbnails": true,
    "ThumbnailMaxWidth": 400,
    "ThumbnailMaxHeight": 300,
    "GenerateExtentReport": true,
    "GenerateTrxReport": true,
    "ReportTitle": "Northumbria NHS - Test Execution Report",
    "ReportTheme": "dark"
  },

  "Accessibility": {
    "Enabled": true,
    "WcagLevel": "AA",
    "WcagVersion": "2.1",
    "AxeCoreVersion": "4.6.3",
    "FailOnViolations": true,
    "IncludedRules": [],
    "ExcludedRules": []
  },

  "Performance": {
    "Enabled": true,
    "MaxPageLoadTimeSeconds": 3.0,
    "MaxSearchResponseTimeSeconds": 2.0,
    "MaxTimeToInteractiveSeconds": 5.0,
    "MaxFirstContentfulPaintSeconds": 1.8,
    "MaxTotalBlockingTimeMs": 300
  },

  "Contrast": {
    "Enabled": true,
    "MinNormalTextRatio": 4.5,
    "MinLargeTextRatio": 3.0,
    "MinUIComponentRatio": 3.0
  },

  "Xray": {
    "Enabled": false,
    "BaseUrl": "https://your-jira-instance.atlassian.net",
    "Username": "",
    "ApiToken": "",
    "ProjectKey": "PROJ",
    "TestExecutionKey": "",
    "TestPlanKey": "",
    "AutoCreateTestExecution": true,
    "TestExecutionSummaryPrefix": "Automated Test Execution -"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "Console": {
      "Enabled": true,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss"
    },
    "File": {
      "Enabled": true,
      "Path": "logs/test-execution.log",
      "RollingInterval": "Day"
    }
  },

  "Retry": {
    "MaxAttempts": 3,
    "DelayBetweenAttemptsMs": 10000,
    "RetryOnTimeout": true,
    "RetryOnElementNotFound": true
  },

  "Parallel": {
    "Enabled": false,
    "MaxDegreeOfParallelism": 4,
    "IsolationMode": "Process"
  }
}
